<div>
  <h2>All Posts</h2>
  <p>Collection of posts by all users.</p>
  <br />
  {{#each posts as |post|}}
  <div class="card">
    <div class="card-header">
      <a class="text-decoration-none" href="/post/{{post.id}}"><h4>{{post.title}}</h4></a>
    </div>
    <div class="card-body">
      <p class="text-justify">{{post.description}}</p>
    </div>
    <div class="card-footer">
      <code class="float-end">{{post.user.name}} - {{format_date post.date_created}}</code>
    </div>
  </div>
  <br />
  {{/each}}
</div>
